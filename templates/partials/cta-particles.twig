<div class='cta-particles'>
	<span class='cta-particles__cta'>
		<span class='cta-particles__text'>{{post.meta('cta-particles')}}</span>
		{% if isArticle %}
			<span class='cta-particles__text'>Subscribe</span>
		{% endif %}
		{% if calendly %}
			<button href='' onclick="Calendly.initPopupWidget({url:'https://calendly.com/sentant-security/introductory-meeting'});return false;" class="button button--cta">
				Schedule on Calendly
			</button>
		{% elseif mailcap %}
			<span>
				{% include 'partials/mailcap.twig' %}
			</span>
		{% elseif certs %}
			<div class="certificate">
				<a href="read-more" class="show-on-click">
					<img class="certificate__logo" src="{{theme.path}}/dist/svg/mbe2020.svg" alt="nmsdc logo"/>
					<span>Sentant is proudly certified as a Minority-Owned business by the WRMSDC.</span>
				</a>
				<a href="read-more" class="show-on-click">
					<img class="certificate__logo" src="{{theme.path}}/dist/svg/soc.svg" alt="aicpa-soc Logo"/>
					<span>Sentant is SOC 2 compliant and audited annually.</span>
				</a>
			</div>
		{% endif %}
	</span>
	<div role="presentation" class="particles" id="particles-js"></div>
</div>
